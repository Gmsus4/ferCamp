<% layout('layouts/boilerplate')%>
 
<div class="container d-flex justify-content-center align-items-center mt-5">
    <div class="row">
        <h1 class="text-center mb-5">Mi perfil</h1>
        <div class="col-md-6 offset-md-3 col-xl-4 offset-xl-4">
            <div class="card shadow cardPerfil">
                <% if(user.urlPerfil.length) {%>
                    <img style="z-index: 10;" class="img-fluid perfilImg" alt="" src="<%= user.urlPerfil[0].url %>">
                <% } else {%>
                    <img style="z-index: 10;" class="perfilImg" src="https://images.unsplash.com/photo-1594495894542-a46cc73e081a?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2071&q=80" alt="">
                <% } %>
                <img style="opacity: 60%;" src="https://images.unsplash.com/photo-1571863533956-01c88e79957e?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1267&q=80"
                    alt="" class="card-img-top" />
                <div class="card-body">
                    <div class="mb-3">
                        <h5 class="card-title">Username: <span style="font-weight: 100;"><%= user.username %></span></h2>
                        <h5 class="card-title">Email: <span style="font-weight: 100;"><%= user.email %></span></h2>
                    </div>
                    <form action="/perfil" method="POST" class="validated-form" novalidate enctype="multipart/form-data">
                        <div class="mb-3">
                            <div class="input-group mb-3">
                                <input type="file" class="form-control" id="imagePerfil" name="imagePerfil" required>
                                <label class="input-group-text" for="imagePerfil">Subir foto de perfil</label>
                            </div>
                        </div>
